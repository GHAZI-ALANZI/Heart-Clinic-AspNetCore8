@model Heart_Clinic.Models.DoctorDetails

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>


    <button type="button" class="btn btn-outline-success me-4">
        <a asp-controller="DoctorDetails" class="text-white text-decoration-none"
           asp-action="Index">Back</a>
    </button>
</p>

<h4 class="text-white oleo-script-bold ">Edit @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)'s Details</h4>

<div class="row">
    <div class="col-md-4">
        <form class="text-white" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DoctorID" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sex" class="control-label"></label>
                <input asp-for="Sex" class="form-control" />
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpecializationRequired" class="control-label">Specialization</label>
                <select class="form-control" id="SpecializationRequired" name="SpecializationRequired">
                    <option> General</option>
                    <option>Gynaecologist</option>
                    <option>Pediatrics</option>
                    <option>Orthopedics</option>
                    <option>Ophthalmology</option>
                </select>
                <span asp-validation-for="SpecializationRequired" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Experiance" class="control-label"></label>
                <input asp-for="Experiance" class="form-control" />
                <span asp-validation-for="Experiance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocEmail" class="control-label"></label>
                <input asp-for="DocEmail" class="form-control" />
                <span asp-validation-for="DocEmail" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ContactNo" class="control-label"></label>
                <input asp-for="ContactNo" class="form-control" />
                <span asp-validation-for="ContactNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
