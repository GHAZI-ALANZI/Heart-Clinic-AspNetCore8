@model Heart_Clinic.Models.Appointment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<p>

    <button type="button" class="btn btn-outline-success">
        <a asp-controller="Home" class="text-white text-decoration-none"
           asp-action="Success">Main Menu</a>
    </button>

    <button type="button" class="btn btn-outline-success"><a class="text-white text-decoration-none" asp-action="Create">Refresh</a></button>
</p>
<center><h3 class ="text-white oleo-script-bold"> Create an Appointment</h3></center>


<div class="row">
    <div class="col-md-4">
        <form class="text-white" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label">Patient ID</label>
                <input asp-for="PatientId" class="form-control" />
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpecializationRequired" class="control-label">Specialization Required</label>
                <select class="form-control" id="Specialization" name="Specialization">
                    <option> General</option>
                    <option>Gynaecologist</option>
                    <option>Pediatrics</option>
                    <option>Orthopedics</option>
                    <option>Ophthalmology</option>
                </select>
                <span asp-validation-for="SpecializationRequired" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorName" class="control-label"> Doctor Name</label>
                <select asp-for="DoctorName"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.doctorList,"Name","Name"))">
                </select>
                <span asp-validation-for="DoctorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitDate" class="control-label"></label>
                <input asp-for="VisitDate" class="form-control" />
                <span asp-validation-for="VisitDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FromTime" class="control-label"> </label>
                <input asp-for="FromTime" class="form-control" />
                <span asp-validation-for="FromTime" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ToTime" class="control-label"></label>
                <input asp-for="ToTime" class="form-control" />
                <span asp-validation-for="ToTime" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>

    <button type="button" class="btn btn-outline-dark"> <a class="text-white text-decoration-none" asp-action="Index">Existing Appointments</a></button>
   
</p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
