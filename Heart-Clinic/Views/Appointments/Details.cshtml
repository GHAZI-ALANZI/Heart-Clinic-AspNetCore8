@model Heart_Clinic.Models.Appointment

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
   
    <p>

        <button type="button" class="btn btn-outline-success me-4">
            <a asp-controller="Appointments" class="text-white text-decoration-none"
               asp-action="Index">Back</a>
        </button>
    </p>

    <center><h3 class ="text-white oleo-script-bold mb-3">Appointment Details</h3></center>
    
    <dl class="row text-white">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SpecializationRequired)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SpecializationRequired)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DoctorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DoctorName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VisitDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VisitDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FromTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FromTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToTime)
        </dd>
    </dl>
</div>
<div>
    <a class="text-warning font-weight" asp-action="Edit" asp-route-id="@Model.AppointmentId">Edit</a>


</div>
