@model Heart_Clinic.Models.PatientDetails

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<p>

<p>
    <button type="button" class="btn btn-outline-success">
        <a asp-controller="Home" class="text-white text-decoration-none"
           asp-action="Success">Main Menu</a>
    </button>

    <button type="button" class="btn btn-outline-success"><a class="text-white text-decoration-none" asp-action="Create">Refresh</a></button>
</p>

<h3 class="text-white oleo-script-bold">Add Patient Details</h3>


<div class="row">
    <div class="col-md-4">
        <form class="text-white" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label >Gender</label><br />
                @Html.RadioButtonFor(model => model.Sex, "Male")
                Male<br />
                @Html.RadioButtonFor(model => model.Sex, "Female")
                Female<br />
                @Html.RadioButtonFor(model => model.Sex, "Others")
                Others<br /><br />
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label">Date of Birth</label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientPhone" class="control-label">Contact Number</label>
                <input asp-for="PatientPhone" class="form-control" />
                <span asp-validation-for="PatientPhone" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PatEmail" class="control-label">Email-ID (Optional)</label>
                <input asp-for="PatEmail" class="form-control" />
                <span asp-validation-for="PatEmail" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p>

    <button type="button" class="btn btn-outline-dark"> <a class="text-white text-decoration-none" asp-action="Index">Existing Patients</a></button>

</p>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
