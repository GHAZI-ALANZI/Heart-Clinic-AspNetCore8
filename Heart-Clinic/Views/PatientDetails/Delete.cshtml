@model Heart_Clinic.Models.PatientDetails

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<p>
    <button type="button" class="btn btn-outline-success me-4">
        <a asp-controller="PatientDetails" class="text-white text-decoration-none"
           asp-action="Index">Back</a>
    </button>

</p>


<h3 class="text-white mb-5">Are you sure you want to delete @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)'s details ?</h3>


<div>

    
    <dl class="row text-white">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sex)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sex)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientPhone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatEmail)
        </dd>
    </dl>


    <form asp-action="Delete">
        <input type="hidden" asp-for="PatientId" />
        <input type="submit" value="Delete" class="btn btn-danger" />


    </form>
</div>
